<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="stylesheet" href="/css/Admin.home.css" />
    <link rel="stylesheet" href="/css/navigation.css" />
    <title>Welcome <%=admin.username %>
    </title>
</head>

<body>
    <nav class="navigation">
        <b class="nav-title">Blog.</b>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/search">All Posts</a></li>
        </ul>
    </nav>
    <div class="container"></div>
    <div class="grid">
        <div class="card">
            <h1>Welcome <%=admin.username %>
            </h1>
            <div class="card-body">
                Write a new Article/Blog
                <a href="/admin/compose" class="btn">Start Now</a>
            </div>
        </div>
        <% blogs.forEach(blog=> { %>
            <a href="/admin/edit/<%=blog._id %>" class="card">
                <div class="imgBx">
                    <img src="<%=blog.thumbnail %>" alt="">
                </div>
                <div class="cardCnt">
                    <h2 class="title">
                        <%= blog.title %>
                    </h2>
                    <p>
                        <%=blog.description %>
                    </p>
                </div>
            </a>
            <% }) %>
    </div>
</body>

</html>