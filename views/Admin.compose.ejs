<body>
    <nav class="navigation">
        <b class="nav-title">Blog.</b>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/search">All Posts</a></li>
        </ul>
    </nav>
    <form action="" method="POST" class="container">
        <input type="text" name="title" value="Your Title Here" id="" placeholder="Enter Blog Title" class="title"
            required>
        <input type="text" name="description" placeholder="Enter Blog Description" id="" class="desc" required>
        <input type="text" name="thumbnail" class="image" placeholder="Enter Image Url" required>
        <textarea name="" id="input" cols="30" rows="10" required></textarea>
        <input type="hidden" id="body" name="body">
        <button id="submit" type="submit" class="btn">Submit</button>
    </form>
    <script>
        // var editor1 = new RichTextEditor("#input");
        // editor1.attachEvent("change", function () {
        //     document.getElementById("body").value = editor1.getHTML()
        // });
        tinymce.init({
            selector: '#input',
            plugins: 'quickbars table image link lists media autoresize help',
            toolbar: 'undo redo | formatselect | bold italic | alignleft aligncentre alignright alignjustify | indent outdent | bullist numlist',

        });
    </script>
</body>

</html>